{
  "name": "my_installer",
  "description": "Example installer JSON",
  "version": "0.0.1",
  "url": "https://github.com/SamuelMarks/libscript",
  "license": "Apache-2.0 OR MIT OR CC0",
  "scripts_root": "${SCRIPT_ROOT_DIR}",
  "wwwroot": [
    {
      "name": "example.com",
      "path": "./my_symlinked_wwwroot",
      "https": {
        "provider": "letsencrypt"
      },
      "builder": [
        {
          "shell": "*",
          "command_folder": "_lib/_toolchain/nodejs",
          "env": {
            "NODEJS_VERSION": "lts"
          }
        },
        {
          "shell": "*",
          "commands": [
            "npm i -g @angular/cli",
            "npm i",
            "ng build --configuration production"
          ],
          "output": [
            "./dist/my-www"
          ]
        }
      ],
      "env": "WWWROOT_example_com_INSTALL"
    }
  ],
  "dependencies": {
    "required": {
      "databases": [
        {
          "name": "POSTGRES",
          "version": "17",
          "env": "POSTGRES_URL",
          "secrets": {
            "POSTGRES_USER": "rest_user",
            "POSTGRES_PASSWORD": "rest_pass",
            "POSTGRES_DB": "rest_db",
            "POSTGRES_PASSWORD_FILE": null
          },
          "target_env": [
            "DATABASE_URL"
          ]
        },
        {
          "name": "VALKEY",
          "version": "*",
          "env": "REDIS_URL",
          "target_env": [
            "REDIS_URL",
            "VALKEY_URL"
          ]
        }
      ],
      "toolchains": [
        {
          "name": "NODEJS",
          "version": "lts",
          "env": "NODEJS_INSTALL_DIR"
        },
        {
          "name": "PYTHON",
          "version": "3.10",
          "env": "PYTHON_INSTALL_DIR"
        },
        {
          "name": "RUST",
          "version": "nightly",
          "env": "RUST_INSTALL_DIR"
        }
      ],
      "servers": [
        {
          "name": "serve-actix-diesel-auth-scaffold",
          "dest": "/tmp/serve-actix-diesel-auth-scaffold",
          "builder": [
            {
              "shell": "*",
              "commands": [
                "git_get https://github.com/SamuelMarks/serve-actix-diesel-auth-scaffold"
              ]
            },
            {
              "shell": "*",
              "commands": [
                "cargo build --release"
              ],
              "output": [
                "./target/release/serve-actix-diesel-auth-scaffold"
              ]
            }
          ],
          "daemon": {
            "os_native": true,
            "env": [
              "POSTGRES_URL",
              "REDIS_URL"
            ]
          }
        }
      ]
    },
    "optional": {
      "databases": [
        {
          "name": "RABBITMQ",
          "version": "*",
          "env": "AMQP_URL"
        }
      ],
      "servers": [
        {
          "name": "JupyterHub",
          "daemon": {
            "os_native": true
          }
        }
      ]
    }
  },
  "log_server": {
    "optional": true
  }
}